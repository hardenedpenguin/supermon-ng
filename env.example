# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_SECRET=supermon-ng-secret-key-change-in-production

# Database Configuration
DB_TYPE=sqlite
DB_PATH=database/supermon.db

# AllStar Configuration
# AMI configuration is now read from allmon.ini files in user_files/
# No need to set AMI_HOST, AMI_PORT, AMI_USERNAME, AMI_PASSWORD here

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_SECURE=false
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Configuration
LOG_LEVEL=debug
LOG_PATH=logs/
LOG_MAX_FILES=30

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# File Paths (for migration from old system)
ASTDB_FILE=astdb.txt
USER_FILES_PATH=user_files/
