# WebSocket Configuration
# Copy this to .env and customize as needed

# WebSocket Server Settings
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=9091
WEBSOCKET_SECURE=false

# WebSocket Security
WEBSOCKET_AUTH_REQUIRED=true
WEBSOCKET_TOKEN_VALIDATION=true

# WebSocket Performance Settings
WEBSOCKET_MAX_CONNECTIONS=100
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_RECONNECT_ATTEMPTS=10
WEBSOCKET_RECONNECT_DELAY=5000

# WebSocket Logging
WEBSOCKET_LOG_LEVEL=info
WEBSOCKET_LOG_CONNECTIONS=true
WEBSOCKET_LOG_MESSAGES=false

# WebSocket Topics Configuration
WEBSOCKET_ENABLE_NODE_STATUS=true
WEBSOCKET_ENABLE_NODE_LIST=true
WEBSOCKET_ENABLE_SYSTEM_INFO=true
WEBSOCKET_ENABLE_MENU_UPDATES=true
WEBSOCKET_ENABLE_AMI_STATUS=true
WEBSOCKET_ENABLE_CONFIG_UPDATES=true
WEBSOCKET_ENABLE_ERROR_NOTIFICATIONS=true

# Frontend WebSocket Configuration (for .env files)
VITE_WEBSOCKET_HOST=localhost
VITE_WEBSOCKET_PORT=9091
VITE_WEBSOCKET_SECURE=false
