{
    "name": "supermon-ng/backend",
    "description": "Modern AllStar Link monitoring backend",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7",
        "symfony/cache": "^6.3",
        "cboden/ratchet": "^0.4",
        "phpunit/phpunit": "^10.5",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SupermonNg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SupermonNg\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse src tests",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "dev": "php -S localhost:8000 -t public public/index.php"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Supermon-ng Team"
        }
    ],
    "minimum-stability": "stable"
}
