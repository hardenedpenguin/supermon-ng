# DVSwitch Mode Configuration
# Copy this file to dvswitch_config.yml and customize for your system
#
# Per-node configuration:
# - Create dvswitch_config_{nodeId}.yml for node-specific settings
# - Configure abinfo_file or abinfo_port in allmon.ini for each node
#
# Format:
# modes:
#   - MODE_NAME:
#       talkgroups:
#         - tgid: "talkgroup_id"
#           alias: "Display Name"

modes:
  - DMR:
      talkgroups:
        # TGIF Network Examples (replace YOURPASSWORD with your TGIF password):
        - tgid: "YOURPASSWORD@tgif.network:62031!0"
          alias: TGIF Worldwide
        - tgid: "YOURPASSWORD@tgif.network:62031!1"
          alias: TGIF Local
        - tgid: "YOURPASSWORD@tgif.network:62031!2"
          alias: TGIF Regional
        - tgid: "YOURPASSWORD@tgif.network:62031!3"
          alias: TGIF National
        - tgid: "YOURPASSWORD@tgif.network:62031!4000"
          alias: TGIF Disconnect
        # BrandMeister Network Examples (replace YOURPASSWORD with your BrandMeister hostpost password):
        - tgid: "YOURPASSWORD@3102.repeater.net:62031!91"
          alias: BM WorldWide
        - tgid: "YOURPASSWORD@3102.repeater.net:62031!3100"
          alias: BM USA
        - tgid: "YOURPASSWORD@3102.repeater.net:62031!3101"
          alias: BM California
        - tgid: "YOURPASSWORD@3102.repeater.net:62031!3102"
          alias: BM Texas
        - tgid: "YOURPASSWORD@3102.repeater.net:62031!4000"
          alias: BM Disconnect

  - YSF:
      talkgroups:
        - tgid: "register.ysfreflector.de:42020"
          alias: PARROT
        - tgid: "americalink.hamfm.com:42000"
          alias: US-AMERICA-LINK
        - tgid: "ysf.kansascitywide.com:42000"
          alias: US-KCWide
        - tgid: "ysfreflector.de:42020"
          alias: YSF Reflector DE
        - tgid: "ysfreflector.com:42020"
          alias: YSF Reflector COM
        - tgid: "register.ysfreflector.de:42020"
          alias: YSF Reflector Register DE
        - tgid: "register.ysfreflector.com:42020"
          alias: YSF Reflector Register COM

  - P25:
